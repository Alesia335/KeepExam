@page
@model Keep.Pages.Notes.CreateModel
@{
}
<br />

<h2>Create</h2>
<div class="border container" style="padding:30px">
    <form method="post">
            @if (Model.CategoriesUser.Count > 0)
            {
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-4">
            <label asp-for="Note.Category" class="control-label"></label>
            </div>
            <div class="col-4" >
            <select asp-for="Note.CategoryId" class="form-control" asp-items="@Model.Categories">
                <option value="">Select Category</option>               
            </select>
            </div>
        </div>
        <div class="form-group row mt-4">
            <div class="col-4">
                <label asp-for="Note.Title"></label>
            </div>
            <div class="col-4">
                <input asp-for="Note.Title" class="form-control" />
            </div>
            <span asp-validation-for="Note.Title" class="text-danger"></span>
        </div>
        <div class="form-group row mt-4">
            <div class="col-4">
                <label asp-for="Note.Text" ></label>
            </div>
            <div class="col-4">
                <input asp-for="Note.Text" class="form-control" />
            </div>
            <span asp-validation-for="Note.Text" class="text-danger"></span>
        </div>
        <div class="form-group row mt-4">
            <div class="col-3 offset-4">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
            <div class="col-3">
                <a asp-page="Index" class="btn btn-success">Back</a>
            </div>
        </div>
            }
            else
            {
                <div class="alert alert-danger" role="alert">
                Before creating notes, please create a category.
                </div>
                <a asp-page="/Categories/Create" class="btn btn-info">Create category</a>
            }
    </form>
</div>


@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
